@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="row" style="height: 400px;">
        <div id="myCarousel" class="carousel slide" data-bs-ride="carousel">

            <!-- Slides -->
            <div class="carousel-inner" role="listbox" style=" width:100%; height: 400px !important;">
                <div class="carousel-item active">
                    <img src="img/Banner1.jpg" alt="Image 1" style=" width:100%; height: 400px !important;">
                </div>
                <div class="carousel-item">
                    <img src="img/Banner2.jpg" alt="Image 2" style=" width:100%; height: 400px !important;">
                </div>
                <div class="carousel-item">
                    <img src="img/Banner3.jpg" alt="Image 3" style=" width:100%; height: 400px !important;">
                </div>
                <!-- Add more slides as needed -->
            </div>

            <!-- Navigation arrows -->
            <a class="carousel-control-prev" href="#myCarousel" role="button" data-bs-slide="prev" style="padding-bottom:40px">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </a>
            <a class="carousel-control-next" href="#myCarousel" role="button" data-bs-slide="next" style="padding-bottom:40px">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </a>
        </div>
    </div>
</div>
