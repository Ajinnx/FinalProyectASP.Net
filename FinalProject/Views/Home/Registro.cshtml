    <script>
    function registrarReceptor() {
        var myHeaders = new Headers();
        myHeaders.append("Content-Type", "application/json");

        var raw = JSON.stringify({
            
            "nombre": document.getElementById("nombreREC").value,
            "apellidos": document.getElementById("apellidosREC").value,
            "dni": document.getElementById("dniREC").value,
            "usuario": document.getElementById("usuarioREC").value,
            "contrasena": document.getElementById("contrasenaREC").value
        });

        var requestOptions = {
            method: 'POST',
            headers: myHeaders,
            body: raw,
            redirect: 'follow'
        };

        fetch("https://localhost:7211/api/usuarios/receptor", requestOptions)
            .then(response => response.text())
            .then(result => $('#formularioReceptor').modal('hide'))
            .catch(error => console.log('error', error));
    }


    function registrarPersona() {
